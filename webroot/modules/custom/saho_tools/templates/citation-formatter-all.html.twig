{#
/**
 * @file
 * Default theme implementation to display all citation formats.
 *
 * Available variables:
 * - citations: An array of citations in different formats.
 *   - harvard: Harvard style citation.
 *   - apa: APA style citation.
 *   - oxford: Oxford style citation
 */
#}
<div class="citation-formatter citation-formatter-all">
  <div class="citation-formats">
    <div class="citation-format mb-4">
      <h4>APA (7th edition)</h4>
      <div class="citation-content apa-citation">
        {{ citations.apa|raw }}
        <button class="btn btn-sm btn-outline-secondary copy-individual mt-2">Copy APA Citation</button>
      </div>
    </div>
    <div class="citation-format mb-4">
      <h4>Oxford (Footnote style)</h4>
      <div class="citation-content oxford-citation">
        {{ citations.oxford|raw }}
        <button class="btn btn-sm btn-outline-secondary copy-individual mt-2">Copy Oxford Citation</button>
      </div>
    </div>
    <div class="citation-format">
      <h4>Harvard</h4>
      <div class="citation-content harvard-citation">
        {{ citations.harvard|raw }}
        <button class="btn btn-sm btn-outline-secondary copy-individual mt-2">Copy Harvard Citation</button>
      </div>
    </div>
    
    <div class="citation-export-section text-center mt-4 pt-4 border-top">
      <h5 class="mb-3">Export Citation</h5>
      <div class="btn-group" role="group" aria-label="Export citation formats">
        <button type="button" class="btn btn-outline-secondary export-bibtex" data-citation-format="bibtex">
          <i class="bi bi-file-text"></i> Export BibTeX
        </button>
        <button type="button" class="btn btn-outline-secondary export-ris" data-citation-format="ris">
          <i class="bi bi-file-text"></i> Export RIS
        </button>
      </div>
    </div>

    <div class="citation-format citation-resources text-center mt-4">
      <a href="/content/referencing-resources-historical-research" class="btn btn-danger" >Referencing Resources for Historical Research</a>
    </div>
  </div>
</div>