use Drupal\Core\Asset\AttachedAssetsInterface;

/**
 * Implements hook_page_attachments_alter().
 */
function saho_performance_page_attachments_alter(array &$page) {
  $current_user = \Drupal::currentUser();
  $route_match = \Drupal::routeMatch();
  $route_name = $route_match->getRouteName();

  // Don't add performance optimizations for admin users or admin routes.
  if ($current_user->hasPermission('access toolbar') ||
      strpos($route_name, 'system.admin') === 0 ||
      strpos($route_name, 'entity.') !== FALSE && strpos($route_name, '.edit') !== FALSE ||
      strpos($route_name, 'node.add') === 0 ||
      strpos($route_name, 'admin') !== FALSE) {
    return;
  }

  // Add critical CSS inline for above-the-fold content (front-end only)
  $critical_css = _saho_performance_get_critical_css();
  if ($critical_css) {
    $page['#attached']['html_head'][] = [
      [
        '#type' => 'html_tag',
        '#tag' => 'style',
        '#value' => $critical_css,
        '#attributes' => [
          'id' => 'critical-css',
        ],
      ],
      'critical_css',
    ];
  }

  // Add preload hints for critical resources (front-end only)
  _saho_performance_add_preload_hints($page);

  // Add resource hints for faster connections (front-end only)
  _saho_performance_add_resource_hints($page);
}

/**
 * Implements hook_css_alter().
 */
function saho_performance_css_alter(&$css, AttachedAssetsInterface $assets) {
  // Get current user for permission checks.
  $current_user = \Drupal::currentUser();

  // Skip CSS optimization for admin users.
  if ($current_user->hasPermission('access toolbar')) {
    return;
  }

  // Get current route for conditional CSS.
  $route_match = \Drupal::routeMatch();
  $route_name = $route_match->getRouteName();

  // Defer non-critical CSS files based on page type.
  foreach ($css as $key => &$item) {
    // Always keep critical CSS files for layout.
    $critical_files = [
      'core/themes/stable9/css/system/components/ajax-progress.module.css',
      'core/themes/stable9/css/system/components/align.module.css',
      'core/themes/stable9/css/system/components/autocomplete-loading.module.css',
      'themes/custom/saho/dist/css/main.css',
      'themes/contrib/radix/assets/css/radix.style.css',
      'modules/custom/saho_tools/css/citation.css',
      'modules/custom/saho_tools/css/citation-modern.css',
      'modules/custom/saho_tools/css/sharing-modern.css',
      'modules/custom/saho_utils/hero_banner/css/hero-banner-modern.css',
      // Keep all admin and toolbar related CSS.
      'core/themes/stable9/css/system/components/tablesort.module.css',
      'core/themes/stable9/css/system/components/tabledrag.module.css',
      'core/themes/stable9/css/system/components/tabs.module.css',
      'core/modules/toolbar/',
      'core/modules/admin_toolbar/',
      'core/modules/contextual/',
      'core/modules/quickedit/',
      'core/modules/shortcut/',
    ];

    // CSS files that are only needed on specific pages (only for front-end)
    // NOTE: Hero banner CSS is in critical_files list above (not deferred)
    // Citation/sharing CSS also in critical_files - needed for modal functionality
    $conditional_css = [
      // Currently no CSS files are conditionally removed
      // Add entries here for page-specific CSS when implementing code splitting
    ];

    // Check if this CSS is critical for current page.
    $is_critical = FALSE;
    foreach ($critical_files as $critical) {
      if (strpos($key, $critical) !== FALSE) {
        $is_critical = TRUE;
        break;
      }
    }

    // Always keep admin/toolbar related CSS.
    if (strpos($key, 'toolbar') !== FALSE ||
        strpos($key, 'admin') !== FALSE ||
        strpos($key, 'contextual') !== FALSE ||
        strpos($key, 'quickedit') !== FALSE ||
        strpos($key, 'shortcut') !== FALSE ||
        strpos($key, 'tabs') !== FALSE) {
      $is_critical = TRUE;
    }

    // Check if this CSS is needed for current route.
    $is_needed = TRUE;
    foreach ($conditional_css as $css_file => $routes) {
      if (strpos($key, $css_file) !== FALSE && !in_array($route_name, $routes)) {
        $is_needed = FALSE;
        break;
      }
    }

    // Remove CSS not needed for this page (only for front-end users)
    if (!$is_needed && !$current_user->hasPermission('access toolbar')) {
      unset($css[$key]);
      continue;
    }

    // Defer non-critical CSS that is still needed (only for front-end)
    if (!$is_critical && isset($item['type']) && $item['type'] === 'file' &&
        !$current_user->hasPermission('access toolbar')) {
      if (!isset($item['attributes']['media']) || $item['attributes']['media'] === 'all') {
        $item['attributes']['media'] = 'print';
        $item['attributes']['onload'] = "this.media='all'";
      }
    }
  }
}

