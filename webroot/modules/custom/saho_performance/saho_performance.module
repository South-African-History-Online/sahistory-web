  // DNS prefetch for external resources if any
  $dns_prefetch_domains = [
    // Add any external domains here if needed
  ];

  foreach ($dns_prefetch_domains as $domain) {
    $page['#attached']['html_head'][] = [
      [
        '#type' => 'html_tag',
        '#tag' => 'link',
        '#attributes' => [
          'rel' => 'dns-prefetch',
          'href' => $domain,
        ],
      ],
      'dns_prefetch_' . str_replace(['https://', 'http://', '/'], '', $domain),
    ];
  }

  // Add preconnect for critical third-party origins
  $preconnect_origins = [
    // Add any critical third-party origins here
  ];

  foreach ($preconnect_origins as $origin) {
    $page['#attached']['html_head'][] = [
      [
        '#type' => 'html_tag',
        '#tag' => 'link',
        '#attributes' => [
          'rel' => 'preconnect',
          'href' => $origin,
          'crossorigin' => TRUE,
        ],
      ],
      'preconnect_' . str_replace(['https://', 'http://', '/'], '', $origin),
