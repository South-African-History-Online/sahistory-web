<div class="tdih-block">
  <h2>This Day in History</h2>

  {% if nodes_data %}
    {% for item in nodes_data %}
      <article class="tdih-item">
        <h3><a href="{{ item.url }}">{{ item.title }}</a></h3>
        {# Example: format the created date #}
        <div class="tdih-date">
          Created: {{ item.created|format_date('custom', 'F j, Y') }}
        </div>
      </article>
    {% endfor %}
  {% else %}
    <p>No items found.</p>
  {% endif %}
</div>
