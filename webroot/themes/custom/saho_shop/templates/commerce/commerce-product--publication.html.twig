{#
/**
 * @file
 * Product template for Publication products (SAHO custom).
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 * - product_entity: The product entity.
 * - product_url: The product URL.
 *
 * @ingroup themeable
 */
#}
<article{{ attributes.addClass('commerce-product-full', 'commerce-product--publication') }}>
  <div class="row">
    <div class="product-left col-sm-6">
      {% if product.field_images|render %}
        {{ product.field_images }}
      {% endif %}
    </div>
    <div class="product-right col-sm-6">
      <h1>{{ product_entity.title.value }}</h1>
      {{ product.variations }}

      {% if product.field_author|render %}
        <div class="meta-item"><strong>Author:</strong> {{ product.field_author }}</div>
      {% endif %}

      {% if product.field_editor|render %}
        <div class="meta-item"><strong>Editor:</strong> {{ product.field_editor }}</div>
      {% endif %}

      {% if product.field_subtitle|render %}
        <div class="subtitle">{{ product.field_subtitle }}</div>
      {% endif %}

      {% if product.field_publication_date|render %}
        <div class="meta-item"><strong>Published:</strong> {{ product.field_publication_date }}</div>
      {% endif %}

      {% if product.field_year|render %}
        <div class="meta-item"><strong>Year:</strong> {{ product.field_year }}</div>
      {% endif %}

      {% if product.field_isbn|render %}
        <div class="meta-item"><strong>ISBN:</strong> {{ product.field_isbn }}</div>
      {% endif %}

      {% if product.field_pages|render %}
        <div class="meta-item"><strong>Pages:</strong> {{ product.field_pages }}</div>
      {% endif %}

      {% if product.field_format|render %}
        <div class="meta-item"><strong>Format:</strong> {{ product.field_format }}</div>
      {% endif %}

      {% if product.field_language|render %}
        <div class="meta-item"><strong>Language:</strong> {{ product.field_language }}</div>
      {% endif %}

      {% if product.field_publisher|render %}
        <div class="meta-item"><strong>Publisher:</strong> {{ product.field_publisher }}</div>
      {% endif %}

      {% if product.field_categories|render %}
        <div class="meta-item"><strong>Categories:</strong> {{ product.field_categories }}</div>
      {% endif %}
    </div>

    <div class="product-bottom col-sm-12">
      {% if product.body|render %}
        <div class="product-description">
          <h3 class="tab-title">{{ 'Description'|t }}</h3>
          <div class="description-content">
            {{ product.body }}
          </div>
        </div>
      {% endif %}
    </div>

  </div>
</article>
