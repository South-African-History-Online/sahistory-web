{#
/**
 * @file
 * SAHO Champion Subscription product full display template.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper.
 * - product: The rendered product fields.
 * - product_entity: The product entity.
 * - product_url: The product URL.
 */
#}

{%
  set classes = [
    'product-champion-subscription',
    'product--type-champion-subscription',
    'product--view-mode-full',
    'pb-4',
    'mb-5',
]
%}

<article{{ attributes.addClass(classes) }}>
  <div class="row g-4 g-lg-5">
    {# Champion Badge and Title Column #}
    <div class="col-lg-12">
      <div class="text-center mb-4">
        <span class="champion-badge">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-award me-2" viewBox="0 0 16 16">
            <path d="M9.669.864 8 0 6.331.864l-1.858.282-.842 1.68-1.337 1.32L2.6 6l-.306 1.854 1.337 1.32.842 1.68 1.858.282L8 12l1.669-.864 1.858-.282.842-1.68 1.337-1.32L13.4 6l.306-1.854-1.337-1.32-.842-1.68L9.669.864zm1.196 1.193.684 1.365 1.086 1.072L12.387 6l.248 1.506-1.086 1.072-.684 1.365-1.51.229L8 10.874l-1.355-.702-1.51-.229-.684-1.365-1.086-1.072L3.614 6l-.25-1.506 1.087-1.072.684-1.365 1.51-.229L8 1.126l1.356.702 1.509.229z"/>
            <path d="M4 11.794V16l4-1 4 1v-4.206l-2.018.306L8 13.126 6.018 12.1 4 11.794z"/>
          </svg>
          SAHO Champion
        </span>
      </div>

      <h1 class="product-champion-subscription__title h2 mb-3 text-center">
        {{ product_entity.title.value }}
      </h1>

      {% if product.body|render is not empty %}
        <div class="product-champion-subscription__description text-center mb-4">
          {{ product.body }}
        </div>
      {% endif %}
    </div>

    {# Subscription Details Column #}
    <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
      {# Price and Add to Cart #}
      <div class="card border-warning shadow-sm mb-4">
        <div class="card-body text-center p-4">
          <div class="product-champion-subscription__price mb-3">
            {{ product.variation_price }}
          </div>
          <div class="small text-muted mb-3">
            {{ 'Recurring donation'|t }}
          </div>
          <div class="product-champion-subscription__add-to-cart">
            {{ product.variations }}
          </div>
        </div>
      </div>

      {# Benefits Section #}
      <div class="subscription-benefits">
        <h3>{{ 'Champion Benefits'|t }}</h3>
        <ul>
          <li>{{ 'Support preservation of South African history'|t }}</li>
          <li>{{ 'Recognition on our supporters page'|t }}</li>
          <li>{{ 'Quarterly newsletter with exclusive content'|t }}</li>
          <li>{{ 'Invitations to SAHO events and webinars'|t }}</li>
          <li>{{ 'Early access to new publications'|t }}</li>
          <li>{{ 'Cancel anytime from your account'|t }}</li>
        </ul>
      </div>

      {# Tax Information #}
      <div class="alert alert-info mt-4">
        <small>
          <strong>{{ 'Note:'|t }}</strong>
          {{ 'Your recurring donation will be processed automatically each billing period. Manage your subscription anytime from your account page.'|t }}
        </small>
      </div>
    </div>
  </div>
</article>
