/* Critical CSS - Above the fold content only */
/* This will be inlined in the <head> for immediate rendering */

/* Essential resets and base styles */
*,*::before,*::after{box-sizing:border-box}
html{font-family:Inter,system-ui,-apple-system,sans-serif;line-height:1.6}
body{margin:0;color:#334155;background:#fff}

/* Header and navigation - above the fold */
.navbar{background:#fff;border:0;padding:.5rem 0}
.navbar-brand{color:#990000!important;font-weight:600;font-size:1.25rem;text-decoration:none}
.navbar-nav .nav-link{color:#990000!important;font-weight:500;padding:.5rem 1rem}
.navbar-nav .nav-link:hover{color:#cc0000!important;text-decoration:none}
.navbar-nav .nav-link:focus{color:#990000!important}
.navbar-nav .nav-link:visited{color:#990000!important}
.navbar-toggler{border:0;color:#990000}
.navbar a{color:#990000!important}
.navbar a:hover{color:#cc0000!important;text-decoration:none}
.navbar a:focus{color:#990000!important}
.navbar a:visited{color:#990000!important}
.navbar li a{color:#990000!important}
.navbar ul li a{color:#990000!important}
.navbar .dropdown-toggle{color:#990000!important}
.navbar .dropdown-item{color:#990000!important}
nav a{color:#990000!important}
header nav a{color:#990000!important}
header .navbar a{color:#990000!important}

/* Hero/banner section - above the fold */
.hero-banner,.page-header{background:#f8fafc;padding:2rem 0;margin-bottom:1.5rem}
.hero-banner h1,.page-header h1{color:#990000;font-size:clamp(1.5rem,4vw,2.5rem);font-weight:700;margin-bottom:1rem}

/* Container and grid essentials */
.container,.container-fluid{width:100%;padding-right:.75rem;padding-left:.75rem;margin-right:auto;margin-left:auto}
@media (min-width:576px){.container{max-width:540px}}
@media (min-width:768px){.container{max-width:720px}}
@media (min-width:992px){.container{max-width:960px}}
@media (min-width:1200px){.container{max-width:1140px}}

/* Layout essentials */
.row{display:flex;flex-wrap:wrap;margin-right:-.75rem;margin-left:-.75rem}
.col-12,.col-md-8,.col-md-4,.col-lg-9,.col-lg-3{position:relative;width:100%;padding-right:.75rem;padding-left:.75rem}
.col-12{flex:0 0 100%;max-width:100%}

/* Typography essentials - only what's visible immediately */
h1,h2,h3{margin-top:0;margin-bottom:.5rem;font-weight:700;line-height:1.3;color:#990000}
p{margin-top:0;margin-bottom:1rem}
.page-content a,.main-content a,p a{color:#990000;text-decoration:none}
.page-content a:hover,.main-content a:hover,p a:hover{color:#cc0000;text-decoration:underline}

/* Buttons - only primary style */
.btn{display:inline-block;font-weight:500;color:#212529;text-align:center;vertical-align:middle;cursor:pointer;background-color:transparent;border:1px solid transparent;padding:.375rem .75rem;font-size:1rem;line-height:1.5;border-radius:.25rem;text-decoration:none}
.btn-primary{color:#fff;background-color:#990000;border-color:#990000}
.btn-primary:hover{color:#fff;background-color:#cc0000;border-color:#cc0000}

/* Loading states to prevent FOUC */
.page-content{min-height:50vh}
img{max-width:100%;height:auto}

/* Hide non-critical content until CSS loads */
.footer,.sidebar,.secondary-content{visibility:hidden}