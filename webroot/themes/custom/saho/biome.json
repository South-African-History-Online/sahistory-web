{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useTemplate": "warn",
        "noUnusedTemplateLiteral": "warn",
        "noParameterAssign": "warn",
        "noVar": "warn",
        "noUselessElse": "warn"
      },
      "complexity": {
        "useOptionalChain": "warn",
        "noForEach": "warn"
      },
      "performance": {
        "noDelete": "warn"
      },
      "correctness": {
        "noInnerDeclarations": "warn"
      }
    },
    "ignore": [
      "node_modules",
      "dist",
      "build"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "always"
    }
  }
}