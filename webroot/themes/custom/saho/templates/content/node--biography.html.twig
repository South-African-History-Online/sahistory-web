{#
/**
 * @file
 * Custom SAHO node template for Biography content type.
 *
 * Title is handled globally and not rendered here.
 * Layout Builder is disabled â€” fields are output directly via Twig.
 */
#}

{# Variable to track if sidebar has content #}
{% set sidebar_has_content = false %}

<article{{ attributes.addClass('saho-article-wrapper') }}>

  <div class="saho-article-grid">

    {# LEFT: Main content column #}
    <div class="saho-main-content">

      {% if node.field_feature_banner.entity %}
        <div class="saho-feature-banner">
          <img
            src="{{ file_url(node.field_feature_banner.entity.uri.value) }}"
            alt="{{ node.field_feature_banner.alt }}"
            class="saho-feature-banner-image"
          >
        </div>
      {% elseif node.field_bio_pic.entity %}
        {# Display bio image in main content if no feature banner #}
        <div class="saho-feature-banner">
          <img
            src="{{ file_url(node.field_bio_pic.entity.uri.value) }}"
            alt="{{ node.field_bio_pic.alt }}"
            class="saho-feature-banner-image"
          >
          {% if node.field_node_image_caption.value %}
            <div class="caption">
              {{ node.field_node_image_caption.value|raw }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="saho-article-meta">
        {% if node.getCreatedTime() %}
          <span>Published {{ node.getCreatedTime()|date("j F Y") }}</span>
        {% endif %}
        {% if node.getChangedTime() != node.getCreatedTime() %}
          <span>Updated {{ node.getChangedTime()|date("j F Y") }}</span>
        {% endif %}
        <div class="saho-tools-wrapper">
          {% if citation_button %}
            <div class="saho-citation-wrapper">
              {{ citation_button }}
            </div>
          {% endif %}
          {% if sharing_button %}
            <div class="saho-sharing-wrapper">
              {{ sharing_button }}
            </div>
          {% endif %}
        </div>
      </div>

      {# Personal Information Box - Classic SAHO Style #}
      {% if node.field_drupal_birth_date.value or node.field_dob.value or node.field_drupal_death_date.value or node.field_dod.value or node.field_position.value or node.field_position_held.value or node.field_affiliation.value or node.field_birth_location.value or node.field_death_location.value or node.field_title.value or node.field_firstname.value or node.field_middlename.value or node.field_lastnamebio.value %}
        <div class="saho-personal-info-box">
          <h3>Personal Information</h3>
          
          {# Full Name #}
          {% if node.field_title.value or node.field_firstname.value or node.field_middlename.value or node.field_lastnamebio.value %}
            <div class="saho-bio-fullname">
              {% if node.field_title.value %}{{ node.field_title.value }} {% endif %}{% if node.field_firstname.value %}{{ node.field_firstname.value }} {% endif %}{% if node.field_middlename.value %}{{ node.field_middlename.value }} {% endif %}{% if node.field_lastnamebio.value %}{{ node.field_lastnamebio.value }}{% endif %}
            </div>
          {% endif %}
          
          {# Birth Information #}
          {% if node.field_drupal_birth_date.value or node.field_dob.value %}
            <div class="saho-bio-info-row">
              <strong>Born:</strong>
              {% if node.field_drupal_birth_date.value %}
                {{ node.field_drupal_birth_date.value|date("j F Y") }}
              {% elseif node.field_dob.value %}
                {{ node.field_dob.value }}
              {% endif %}
              {% if node.field_birth_location.value %}
                in {{ node.field_birth_location.value }}
              {% endif %}
            </div>
          {% endif %}
          
          {# Death Information #}
          {% if node.field_drupal_death_date.value or node.field_dod.value %}
            <div class="saho-bio-info-row">
              <strong>Died:</strong>
              {% if node.field_drupal_death_date.value %}
                {{ node.field_drupal_death_date.value|date("j F Y") }}
              {% elseif node.field_dod.value %}
                {{ node.field_dod.value }}
              {% endif %}
              {% if node.field_death_location.value %}
                in {{ node.field_death_location.value }}
              {% endif %}
              {% if node.field_cod.value %}
                ({{ node.field_cod.value }})
              {% endif %}
            </div>
          {% endif %}
          
          {# Position Information #}
          {% if node.field_position_held.value %}
            <div class="saho-bio-info-row">
              <strong>Position:</strong>
              {{ node.field_position_held.value|raw|striptags }}
            </div>
          {% elseif node.field_position.value %}
            <div class="saho-bio-info-row">
              <strong>Position:</strong>
              {{ node.field_position.value|raw|striptags }}
            </div>
          {% endif %}
          
          {# Affiliation Information #}
          {% if node.field_affiliation.value %}
            <div class="saho-bio-info-row">
              <strong>Affiliation:</strong>
              {{ node.field_affiliation.value }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if content.body %}
        <div class="saho-article-body">
          {# Remove the label by accessing the content directly #}
          {{ content.body.0 }}
        </div>
      {% endif %}

      {% if content.field_highlight %}
        <div class="saho-highlight">
          {{ content.field_highlight }}
        </div>
      {% endif %}

      {# Render remaining fields not already shown manually #}
      {{ content|without(
        'body',
        'field_highlight',
        'field_further_reading',
        'field_bio_pic',
        'field_node_image_caption',
        'field_ref_str',
        'field_african_country',
        'field_archive_page_feature',
        'field_feature_parent',
        'field_parent',
        'field_feature_tag',
        'field_feature_banner',
        'field_home_page_feature',
        'field_home_page_feature_africa_s',
        'field_home_page_feature_biograph',
        'field_people_category',
        'field_people_level3_cat',
        'field_people_related_tab',
        'field_gallery_tag',
        'field_synopsis',
        'field_title',
        'field_firstname',
        'field_middlename',
        'field_lastnamebio',
        'field_drupal_birth_date',
        'field_dob',
        'field_birth_location',
        'field_drupal_death_date',
        'field_dod',
        'field_death_location',
        'field_cod',
        'field_position',
        'field_affiliation',
        'field_position_held',
        'field_position_format',
        'field_member_of_organisation',
        'field_gender',
        'field_race',
        'field_article_author',
        'field_article_editors',
        'field_editors',
        'sharing_buttons'
      ) }}

    </div>

    {# RIGHT: Sidebar #}
    {% if node.field_bio_pic.entity and node.field_feature_banner.entity %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if accordion_views is not empty %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_people_category is defined and content.field_people_category|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_people_level3_cat is defined and content.field_people_level3_cat|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_african_country is defined and content.field_african_country|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_people_related_tab is defined and content.field_people_related_tab|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if node.field_feature_parent and not node.field_feature_parent.isEmpty() %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_member_of_organisation is defined and content.field_member_of_organisation|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_synopsis is defined and content.field_synopsis|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_further_reading is defined and content.field_further_reading|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if node.field_ref_str.value %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if sidebar_has_content %}
    <aside class="saho-article-sidebar">

      {# Profile Image Block - Always visible at top #}
      {% if node.field_bio_pic.entity and node.field_feature_banner.entity %}
        <div class="saho-image-block mb-4">
          <img
            src="{{ file_url(node.field_bio_pic.entity.uri.value) }}"
            alt="{{ node.field_bio_pic.alt }}"
            class="saho-image"
          >
          {% if node.field_node_image_caption.value %}
            <div class="caption">
              {{ node.field_node_image_caption.value|raw }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {# Tabbed Content Area #}
      <div class="saho-sidebar-tabs" id="saho-biography-tabs">

        {# Simplified Content - No Tabs Needed #}
        <div class="saho-simplified-sidebar">

          {# Custom Accordion for feature_children views - First #}
          {% if accordion_views is not empty %}
            <div class="saho-accordion mb-5" id="sahoFeatureAccordion">
              {% for item in accordion_views %}
                <div class="saho-accordion-item">
                  <h4 class="saho-accordion-header">
                    <button class="saho-accordion-button {% if not loop.first %}collapsed{% endif %}"
                            type="button"
                            aria-expanded="{{ loop.first ? 'true' : 'false' }}"
                            aria-controls="collapse-{{ item.id }}"
                            data-target="#collapse-{{ item.id }}">
                      {{ item.title }}
                    </button>
                  </h4>
                  <div id="collapse-{{ item.id }}"
                       class="saho-accordion-collapse {% if loop.first %}show{% endif %}"
                       aria-hidden="{{ loop.first ? 'false' : 'true' }}">
                    <div class="saho-accordion-body">
                      {{ drupal_view(item.view, item.block, node.id()) }}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endif %}

          {# Simple sections for field_feature_parent grouped by content type #}
          {# Only show categories that don't have an accordion view #}
          {% if grouped_feature_parents is not empty %}
            {% set accordion_categories = [] %}
            {% if accordion_views is not empty %}
              {% for item in accordion_views %}
                {% set accordion_categories = accordion_categories|merge([item.id]) %}
              {% endfor %}
            {% endif %}

            {% for category, items in grouped_feature_parents %}
              {% if category not in accordion_categories %}
                <div class="saho-taxonomy-group">
                  <h4>{{ category|capitalize }}</h4>
                  <ul class="saho-related-list">
                    {% for referenced_node in items %}
                      <li><a href="{{ path('entity.node.canonical', {'node': referenced_node.id}) }}">{{ referenced_node.label }}</a></li>
                    {% endfor %}
                  </ul>
                </div>
              {% endif %}
            {% endfor %}
          {% endif %}

          {# References section #}
          {% if node.field_ref_str.value %}
            {% set refs = node.field_ref_str.value|split('|') %}
            <div class="saho-references">
              <h4>References</h4>
              <ul class="saho-reference-list">
                {% for ref in refs %}
                  {% if ref|trim %}
                    <li>{{ ref|trim|raw }}</li>
                  {% endif %}
                {% endfor %}
              </ul>
            </div>
          {% endif %}

        </div>
      </div>

    </aside>
    {% endif %}

  </div>

</article>

{# Context & Related Information Accordion #}
{% set has_context = content.field_people_related_tab|render|trim or content.field_feature_parent|render|trim or content.field_member_of_organisation|render|trim or content.field_people_category|render|trim or content.field_people_level3_cat|render|trim or content.field_african_country|render|trim or content.field_further_reading|render|trim or content.field_synopsis|render|trim %}

{% if has_context %}
  <div class="saho-accordion saho-context-accordion">
    <h2>Context & Related Information</h2>
    
    {% if content.field_people_related_tab is defined and content.field_people_related_tab|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#people-collapse" aria-expanded="false" aria-controls="people-collapse">
            Related People
          </button>
        </h3>
        <div id="people-collapse" class="saho-accordion-collapse" aria-labelledby="people-header">
          <div class="saho-accordion-body">
            {{ content.field_people_related_tab }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_people_category is defined and content.field_people_category|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#category-collapse" aria-expanded="false" aria-controls="category-collapse">
            People Category
          </button>
        </h3>
        <div id="category-collapse" class="saho-accordion-collapse" aria-labelledby="category-header">
          <div class="saho-accordion-body">
            {{ content.field_people_category }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_people_level3_cat is defined and content.field_people_level3_cat|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#subcategory-collapse" aria-expanded="false" aria-controls="subcategory-collapse">
            People Subcategory
          </button>
        </h3>
        <div id="subcategory-collapse" class="saho-accordion-collapse" aria-labelledby="subcategory-header">
          <div class="saho-accordion-body">
            {{ content.field_people_level3_cat }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_african_country is defined and content.field_african_country|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#country-collapse" aria-expanded="false" aria-controls="country-collapse">
            African Country
          </button>
        </h3>
        <div id="country-collapse" class="saho-accordion-collapse" aria-labelledby="country-header">
          <div class="saho-accordion-body">
            {{ content.field_african_country }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_member_of_organisation is defined and content.field_member_of_organisation|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#organizations-collapse" aria-expanded="false" aria-controls="organizations-collapse">
            Member of Organizations
          </button>
        </h3>
        <div id="organizations-collapse" class="saho-accordion-collapse" aria-labelledby="organizations-header">
          <div class="saho-accordion-body">
            {{ content.field_member_of_organisation }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_feature_parent is defined and content.field_feature_parent|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#related-content-collapse" aria-expanded="false" aria-controls="related-content-collapse">
            Related Content
          </button>
        </h3>
        <div id="related-content-collapse" class="saho-accordion-collapse" aria-labelledby="related-content-header">
          <div class="saho-accordion-body">
            <ul class="saho-context-list">
              {% for item in content.field_feature_parent['#items'] %}
                <li>{{ content.field_feature_parent[loop.index0] }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_further_reading is defined and content.field_further_reading|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#further-reading-collapse" aria-expanded="false" aria-controls="further-reading-collapse">
            Further Reading
          </button>
        </h3>
        <div id="further-reading-collapse" class="saho-accordion-collapse" aria-labelledby="further-reading-header">
          <div class="saho-accordion-body">
            <ul class="saho-context-list">
              {% for item in content.field_further_reading['#items'] %}
                <li>{{ content.field_further_reading[loop.index0] }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_synopsis is defined and content.field_synopsis|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#synopsis-collapse" aria-expanded="false" aria-controls="synopsis-collapse">
            Synopsis
          </button>
        </h3>
        <div id="synopsis-collapse" class="saho-accordion-collapse" aria-labelledby="synopsis-header">
          <div class="saho-accordion-body">
            {{ content.field_synopsis }}
          </div>
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}
