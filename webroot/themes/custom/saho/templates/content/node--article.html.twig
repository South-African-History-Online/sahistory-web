{#
/**
 * @file
 * Custom SAHO node template.
 *
 * Title is handled globally and not rendered here.
 * Layout Builder is disabled â€” fields are output directly via Twig.
 */
#}

{# Variable to track if sidebar has content #}
{% set sidebar_has_content = false %}

<article{{ attributes.addClass('saho-article-wrapper') }}>

  <div class="saho-article-grid">

    {# LEFT: Main content column #}
    <div class="saho-main-content">

      {% if node.field_feature_banner.entity %}
        <div class="saho-feature-banner">
          <img
            src="{{ file_url(node.field_feature_banner.entity.uri.value) }}"
            alt="{{ node.field_feature_banner.alt }}"
            class="saho-feature-banner-image"
          >
        </div>
      {% elseif node.field_article_image.entity %}
        {# Display article image in main content if no feature banner #}
        <div class="saho-feature-banner">
          <img
            src="{{ file_url(node.field_article_image.entity.uri.value) }}"
            alt="{{ node.field_article_image.alt }}"
            class="saho-feature-banner-image"
          >
          {% if node.field_node_image_caption.value %}
            <div class="caption">
              {{ node.field_node_image_caption.value|raw }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      <div class="saho-article-meta">
        {% if node.getCreatedTime() %}
          <span>Published {{ node.getCreatedTime()|date("j F Y") }}</span>
        {% endif %}
        {% if node.getChangedTime() != node.getCreatedTime() %}
          <span>Updated {{ node.getChangedTime()|date("j F Y") }}</span>
        {% endif %}
        <div class="saho-tools-wrapper">
          {% if citation_button %}
            <div class="saho-citation-wrapper">
              {{ citation_button }}
            </div>
          {% endif %}
          {% if sharing_button %}
            <div class="saho-sharing-wrapper">
              {{ sharing_button }}
            </div>
          {% endif %}
        </div>
      </div>

      {% if content.body %}
        <div class="saho-article-body">
          {# Remove the label by accessing the content directly #}
          {{ content.body.0 }}
        </div>
      {% endif %}

      {% if content.field_tags is defined and content.field_tags|render|trim %}
        <div class="saho-tags">
          <h4>Tags</h4>
          <ul class="saho-tags-list">
            {% for item in node.field_tags %}
              <li>
                <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': item.target_id}) }}">
                  {{ item.entity.label }}
                </a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}

      {% if content.field_highlight %}
        <div class="saho-highlight">
          {{ content.field_highlight }}
        </div>
      {% endif %}

      {# Render remaining fields not already shown manually #}
      {{ content|without(
        'body',
        'field_highlight',
        'field_further_reading',
        'field_article_image',
        'field_node_image_caption',
        'field_ref_str',
        'field_african_country',
        'field_article_type',
        'field_tags',
        'field_topics_related_tab',
        'field_people_related_tab',
        'field_archive_page_feature',
        'field_feature_parent',
        'field_parent',
        'field_feature_tag',
        'field_politics_society_categorie',
        'field_timeline_categories_type',
        'field_feature_banner',
        'field_africa_category',
        'field_image',
        'field_featured',
        'field_gallery_tag',
        'field_timelines_related_tab',
        'sharing_buttons'
      ) }}

    </div>


    {# RIGHT: Simplified Sidebar #}
    {% if node.field_article_image.entity and node.field_feature_banner.entity %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if accordion_views is not empty %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_archive_page_feature is defined and content.field_archive_page_feature|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_africa_category is defined and content.field_africa_category|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_topics_related_tab is defined and content.field_topics_related_tab|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_people_related_tab is defined and content.field_people_related_tab|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_feature_parent is defined and content.field_feature_parent|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_timeline_categories_type is defined and content.field_timeline_categories_type|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if content.field_further_reading is defined and content.field_further_reading|render|trim %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if node.field_ref_str.value %}
      {% set sidebar_has_content = true %}
    {% endif %}
    
    {% if sidebar_has_content %}
    <aside class="saho-article-sidebar">

      {# Article Image Block - Always visible at top #}
      {% if node.field_article_image.entity and node.field_feature_banner.entity %}
        <div class="saho-image-block mb-4">
          <img
            src="{{ file_url(node.field_article_image.entity.uri.value) }}"
            alt="{{ node.field_article_image.alt }}"
            class="saho-image"
          >
          {% if node.field_node_image_caption.value %}
            <div class="caption">
              {{ node.field_node_image_caption.value|raw }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {# Tabbed Content Area #}
      <div class="saho-sidebar-tabs" id="saho-article-tabs">
        
        {# Simplified Content - No Tabs Needed #}
        <div class="saho-simplified-sidebar">
          
          {# Related Content Accordion #}
          {% if accordion_views is not empty %}
            <div class="saho-accordion">
              {% for item in accordion_views %}
                <div class="saho-accordion-item">
                  <h4 class="saho-accordion-header">
                    <button class="saho-accordion-button {% if not loop.first %}collapsed{% endif %}" 
                            type="button" 
                            aria-expanded="{% if loop.first %}true{% else %}false{% endif %}" 
                            aria-controls="collapse-{{ item.id }}"
                            data-target="#collapse-{{ item.id }}">
                      {{ item.title }}
                    </button>
                  </h4>
                  <div id="collapse-{{ item.id }}" 
                       class="saho-accordion-collapse {% if loop.first %}show{% endif %}" 
                       aria-hidden="{% if loop.first %}false{% else %}true{% endif %}">
                    <div class="saho-accordion-body">
                      {{ drupal_view(item.view, item.block, node.id()) }}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          {% endif %}


          {# References Accordion #}
          {% if node.field_ref_str.value %}
            {% set refs = node.field_ref_str.value|split('|') %}
            <div class="saho-accordion">
              <div class="saho-accordion-item">
                <h4 class="saho-accordion-header">
                  <button class="saho-accordion-button collapsed" type="button" data-target="#references-collapse" aria-expanded="false" aria-controls="references-collapse">
                    References
                  </button>
                </h4>
                <div id="references-collapse" class="saho-accordion-collapse" aria-labelledby="references-header">
                  <div class="saho-accordion-body">
                    <ul class="saho-reference-list">
                      {% for ref in refs %}
                        {% if ref|trim %}
                          <li>{{ ref|trim|raw }}</li>
                        {% endif %}
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          {% endif %}

        </div>
      </div>

    </aside>
    {% endif %}

  </div>

</article>

{# Context & Related Topics Accordion #}
{% set has_context = content.field_topics_related_tab|render|trim or content.field_people_related_tab|render|trim or content.field_feature_parent|render|trim or content.field_archive_page_feature|render|trim or content.field_africa_category|render|trim or content.field_timeline_categories_type|render|trim or content.field_further_reading|render|trim %}

{% if has_context %}
  <div class="saho-accordion saho-context-accordion">
    <h2>Context & Related Topics</h2>
    
    {% if content.field_people_related_tab is defined and content.field_people_related_tab|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#people-collapse" aria-expanded="false" aria-controls="people-collapse">
            Related People
          </button>
        </h3>
        <div id="people-collapse" class="saho-accordion-collapse" aria-labelledby="people-header">
          <div class="saho-accordion-body">
            {{ content.field_people_related_tab }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_archive_page_feature is defined and content.field_archive_page_feature|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#organisations-collapse" aria-expanded="false" aria-controls="organisations-collapse">
            Organisations
          </button>
        </h3>
        <div id="organisations-collapse" class="saho-accordion-collapse" aria-labelledby="organisations-header">
          <div class="saho-accordion-body">
            {{ content.field_archive_page_feature }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_timeline_categories_type is defined and content.field_timeline_categories_type|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#timelines-collapse" aria-expanded="false" aria-controls="timelines-collapse">
            Timelines
          </button>
        </h3>
        <div id="timelines-collapse" class="saho-accordion-collapse" aria-labelledby="timelines-header">
          <div class="saho-accordion-body">
            {{ content.field_timeline_categories_type }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_africa_category is defined and content.field_africa_category|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#archive-collapse" aria-expanded="false" aria-controls="archive-collapse">
            Archive
          </button>
        </h3>
        <div id="archive-collapse" class="saho-accordion-collapse" aria-labelledby="archive-header">
          <div class="saho-accordion-body">
            {{ content.field_africa_category }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_topics_related_tab is defined and content.field_topics_related_tab|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#topics-collapse" aria-expanded="false" aria-controls="topics-collapse">
            Related Topics
          </button>
        </h3>
        <div id="topics-collapse" class="saho-accordion-collapse" aria-labelledby="topics-header">
          <div class="saho-accordion-body">
            {{ content.field_topics_related_tab }}
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_feature_parent is defined and content.field_feature_parent|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#related-content-collapse" aria-expanded="false" aria-controls="related-content-collapse">
            Related Content
          </button>
        </h3>
        <div id="related-content-collapse" class="saho-accordion-collapse" aria-labelledby="related-content-header">
          <div class="saho-accordion-body">
            <ul class="saho-context-list">
              {% for item in content.field_feature_parent['#items'] %}
                <li>{{ content.field_feature_parent[loop.index0] }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}

    {% if content.field_further_reading is defined and content.field_further_reading|render|trim %}
      <div class="saho-accordion-item">
        <h3 class="saho-accordion-header">
          <button class="saho-accordion-button collapsed" type="button" data-target="#further-reading-collapse" aria-expanded="false" aria-controls="further-reading-collapse">
            Further Reading
          </button>
        </h3>
        <div id="further-reading-collapse" class="saho-accordion-collapse" aria-labelledby="further-reading-header">
          <div class="saho-accordion-body">
            <ul class="saho-context-list">
              {% for item in content.field_further_reading['#items'] %}
                <li>{{ content.field_further_reading[loop.index0] }}</li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
{% endif %}

