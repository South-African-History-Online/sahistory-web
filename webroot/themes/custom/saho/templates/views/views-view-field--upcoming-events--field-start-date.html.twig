/**
 * @file
 * Template for the start date field in upcoming events views.
 *
 * Formats date as "day month year" (e.g., "28 September 2025").
 *
 * Available variables:
 * - output: The raw field output from the entity.
 * - row: The raw result object.
 * - view: The view object.
 * - field: The field handler object that can process the output.
 */
#}

{%- if row._entity.field_start_date.value -%}
  {% set start_date = row._entity.field_start_date.value|date('j F Y') %}
  {{ start_date }}
{%- endif -%}