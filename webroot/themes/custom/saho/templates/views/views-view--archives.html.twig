{#
/**
 * @file
 * Template for the Archives landing page.
 *
 * This template is specifically designed for the Archives section,
 * with a research-oriented approach and extensive filtering options.
 *
 * Available variables:
 * - view: The view object.
 * - rows: A list of the view's row items.
 * - options: The view plugin style options.
 * - title: The title of the view.
 * - header: The view header.
 * - footer: The view footer.
 * - empty: The empty text to display if the view is empty.
 * - pager: The pager output.
 * - exposed: Exposed widget form/info to display.
 * - feed_icons: Feed icons to display, if any.
 * - more: An optional link to the next page of results.
 * - totals: The total rows and pages.
 * - rows_total: The total number of rows returned by the view.
 * - attachment_before: An optional attachment view to be displayed before the view.
 * - attachment_after: An optional attachment view to be displayed after the view.
 * - dom_id: Unique id for every view being printed to give unique class for Javascript.
 *
 * @see template_preprocess_views_view()
 */
#}

{# Define section-specific colors and classes #}
{% set section_name = 'Archives' %}
{% set section_color = 'saho-dark-charcoal' %}
{% set section_bg_class = 'saho-bg-dark-charcoal' %}
{% set section_border_class = 'saho-border-dark-charcoal' %}
{% set section_text_class = 'saho-text-dark-charcoal' %}

<div{{ attributes.addClass('saho-landing-page', 'saho-archives-page', 'view-' ~ view.id|clean_class) }}>
  
  {# Hero Section with Advanced Search #}
  <section class="saho-landing-hero saho-archives-hero mb-5 py-4 bg-light">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8">
          <h1 class="display-4 {{ section_text_class }}">{{ section_name }}</h1>
          
          {% if header %}
            <div class="saho-landing-description lead mb-4">
              {{ header }}
            </div>
          {% else %}
            <div class="saho-landing-description lead mb-4">
              Explore the SAHO Archives, featuring historical documents, images, and resources for researchers and history enthusiasts.
            </div>
          {% endif %}
        </div>
        <div class="col-lg-4 d-none d-lg-block">
          <div class="saho-landing-icon text-center">
            <img src="/themes/custom/saho/images/icons/archives.svg" 
                 alt="Archives Icon" 
                 class="img-fluid" 
                 onerror="this.src='/themes/custom/saho/logo.svg'; this.style.maxWidth='150px';">
          </div>
        </div>
      </div>
    </div>
  </section>
  
  {# Advanced Search Section - Prominent for Archives #}
  <section class="saho-archives-search mb-5 py-4 {{ section_bg_class }}">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <h2 class="h3 text-white mb-4">Advanced Search</h2>
          
          {% if exposed %}
            <div class="saho-archives-filters p-4 bg-white rounded shadow-sm">
              {{ exposed }}
              
              {% if feed_icons %}
                <div class="saho-archives-feeds mt-4 text-end">
                  {{ feed_icons }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  
  {# Featured Archives - if available #}
  {% if attachment_before %}
    <section class="saho-archives-featured mb-5">
      <div class="container">
        <h2 class="h3 {{ section_text_class }} mb-4">Featured Collections</h2>
        <div class="saho-featured-content">
          {{ attachment_before }}
        </div>
      </div>
    </section>
  {% endif %}
  
  {# Main Content Section #}
  <section class="saho-archives-content mb-5">
    <div class="container">
      <div class="row">
        {# Sidebar with research tools #}
        <div class="col-lg-3 mb-4 mb-lg-0">
          <div class="saho-archives-sidebar {{ section_border_class }} border-top border-4 p-3 bg-light rounded">
            <h2 class="h4 {{ section_text_class }} mb-3">Research Tools</h2>
            
            <div class="saho-archives-tools">
              <ul class="list-unstyled">
                <li class="mb-3">
                  <a href="/archives/collections" class="d-flex align-items-center text-decoration-none text-dark">
                    <span class="me-2 {{ section_text_class }}"><i class="fas fa-folder"></i></span>
                    <span>Browse Collections</span>
                  </a>
                </li>
                <li class="mb-3">
                  <a href="/archives/timeline" class="d-flex align-items-center text-decoration-none text-dark">
                    <span class="me-2 {{ section_text_class }}"><i class="fas fa-clock"></i></span>
                    <span>Timeline View</span>
                  </a>
                </li>
                <li class="mb-3">
                  <a href="/archives/map" class="d-flex align-items-center text-decoration-none text-dark">
                    <span class="me-2 {{ section_text_class }}"><i class="fas fa-map-marker-alt"></i></span>
                    <span>Map View</span>
                  </a>
                </li>
                <li class="mb-3">
                  <a href="/archives/subjects" class="d-flex align-items-center text-decoration-none text-dark">
                    <span class="me-2 {{ section_text_class }}"><i class="fas fa-tags"></i></span>
                    <span>Subject Index</span>
                  </a>
                </li>
                <li class="mb-3">
                  <a href="/archives/contributors" class="d-flex align-items-center text-decoration-none text-dark">
                    <span class="me-2 {{ section_text_class }}"><i class="fas fa-users"></i></span>
                    <span>Contributors</span>
                  </a>
                </li>
              </ul>
            </div>
            
            <h3 class="h5 {{ section_text_class }} mt-4 mb-3">Resource Types</h3>
            <div class="saho-archives-types">
              <div class="d-flex flex-wrap">
                <a href="/archives/documents" class="badge bg-secondary m-1 text-decoration-none">Documents</a>
                <a href="/archives/photographs" class="badge bg-secondary m-1 text-decoration-none">Photographs</a>
                <a href="/archives/audio" class="badge bg-secondary m-1 text-decoration-none">Audio</a>
                <a href="/archives/video" class="badge bg-secondary m-1 text-decoration-none">Video</a>
                <a href="/archives/oral-histories" class="badge bg-secondary m-1 text-decoration-none">Oral Histories</a>
                <a href="/archives/manuscripts" class="badge bg-secondary m-1 text-decoration-none">Manuscripts</a>
                <a href="/archives/newspapers" class="badge bg-secondary m-1 text-decoration-none">Newspapers</a>
              </div>
            </div>
          </div>
        </div>
        
        {# Main content grid #}
        <div class="col-lg-9">
          {% if title %}
            <h2 class="h3 mb-4 {{ section_text_class }}">{{ title }}</h2>
          {% endif %}
          
          {% if rows_total %}
            <div class="saho-archives-results-count mb-3">
              <p class="text-muted">Showing {{ rows_total }} results</p>
            </div>
          {% endif %}
          
          {% if rows %}
            <div class="saho-archives-grid">
              {{ rows }}
            </div>
          {% elseif empty %}
            <div class="saho-archives-empty alert alert-info">
              {{ empty }}
            </div>
          {% endif %}
          
          {% if pager %}
            <div class="saho-archives-pager mt-4">
              {{ pager }}
            </div>
          {% endif %}
          
          {% if more %}
            <div class="saho-archives-more mt-4 text-center">
              {{ more }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  
  {# Additional Content Section - if available #}
  {% if attachment_after %}
    <section class="saho-archives-additional py-4 mb-5 bg-light">
      <div class="container">
        <h2 class="h3 mb-4 {{ section_text_class }}">Related Resources</h2>
        <div class="saho-additional-content">
          {{ attachment_after }}
        </div>
      </div>
    </section>
  {% endif %}
  
  {# Call to Action Section #}
  <section class="saho-archives-cta py-5 {{ section_bg_class }}">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-8 text-white">
          <h2 class="h3 mb-3">Contribute to the Archives</h2>
          <p class="mb-4">Help us preserve South African history by contributing your documents, photographs, or oral histories to our archives.</p>
        </div>
        <div class="col-lg-4 text-center text-lg-end">
          <a href="/form/contribute" class="btn btn-light {{ section_text_class }} px-4 py-2">
            <span class="me-2">âœ¦</span> Contribute Now
          </a>
        </div>
      </div>
    </div>
  </section>
</div>