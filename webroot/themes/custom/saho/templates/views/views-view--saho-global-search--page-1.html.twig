{#
/**
 * @file
 * Template for the SAHO Global Search view.
 *
 * This template removes the smaller Sort button and grid/list view toggle
 * while preserving the main sorting functionality.
 *
 * Available variables:
 * - view: The view object.
 * - rows: A list of the view's row items.
 * - options: The view plugin style options.
 * - title: The title of the view.
 * - header: The view header.
 * - footer: The view footer.
 * - empty: The empty text to display if the view is empty.
 * - pager: The pager output.
 * - exposed: Exposed widget form/info to display.
 * - feed_icons: Feed icons to display, if any.
 * - more: An optional link to the next page of results.
 * - totals: The total rows and pages.
 * - rows_total: The total number of rows returned by the view.
 * - attachment_before: An optional attachment view to be displayed before the view.
 * - attachment_after: An optional attachment view to be displayed after the view.
 * - dom_id: Unique id for every view being printed to give unique class for Javascript.
 *
 * @see template_preprocess_views_view()
 */
#}

<div{{ attributes.addClass('view-' ~ view.id|clean_class) }}>
  
  {# Header Section #}
  <section class="saho-landing-hero mb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <div class="saho-search-header">
            <h3 class="saho-search-page-title">
              {% if search_query %}
                Search Results for <em>&ldquo;{{ search_query }}&rdquo;</em>
              {% else %}
                Search Results
              {% endif %}
            </h3>
            {% if header %}
              <div class="saho-landing-description mb-4">
                {{ header }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  {# Main Content Section #}
  <section class="saho-landing-content mb-5">
    <div class="container">
      <div class="row">
        
        {# Sidebar with filters #}
        <div class="col-lg-3 mb-4 mb-lg-0">
          <div class="saho-landing-sidebar p-3 rounded shadow-sm">
            
            {% if exposed %}
              <div class="saho-landing-filters mb-4">
                {{ exposed }}

                {% if feed_icons %}
                  <div class="saho-landing-feeds mt-3 text-end">
                    {{ feed_icons }}
                  </div>
                {% endif %}
              </div>
            {% endif %}

          </div>
        </div>
        
        {# Main content #}
        <div class="col-lg-9">
          {% if title %}
            <h2 class="h3 mb-4">{{ title }}</h2>
          {% endif %}
          
          {# Results count #}
          {% if rows_total is defined and rows_total > 0 %}
            <p class="saho-results-count small text-muted mb-3">Showing <strong>{{ rows_total }}</strong> results</p>
          {% endif %}
          
          {% if rows %}
            <div class="saho-search-results-wrapper">
              <div class="search-results list-view">
                {{ rows }}
              </div>
            </div>
          {% else %}
            {% if empty %}
              <div class="saho-view-empty alert alert-info">
                {{ empty }}
              </div>
            {% elseif search_query %}
              <p class="text-muted mb-3">No results found for <em>&ldquo;{{ search_query }}&rdquo;</em>.</p>
            {% endif %}

            {% if spellcheck_suggestion and search_query %}
              <p class="saho-spellcheck-suggestion">
                Did you mean:
                <a href="{{ path('view.saho_global_search.page_1', {}, {'query': {'search_api_fulltext': spellcheck_suggestion}}) }}" class="saho-spellcheck-link fw-semibold">
                  {{ spellcheck_suggestion }}
                </a>?
              </p>
            {% endif %}
          {% endif %}
          
          {% if pager %}
            <div class="saho-search-pager mt-4">
              {{ pager }}
            </div>
          {% endif %}
          
          {% if more %}
            <div class="saho-landing-more mt-4 text-center">
              {{ more }}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </section>
  
  {# Additional Content Section - if available #}
  {% if attachment_after %}
    <section class="saho-landing-additional py-4 mb-5 bg-light">
      <div class="container">
        <h2 class="h3 mb-4">Related Results</h2>
        <div class="saho-additional-content">
          {{ attachment_after }}
        </div>
      </div>
    </section>
  {% endif %}
</div>
