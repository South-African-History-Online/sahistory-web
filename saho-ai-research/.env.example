# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.3

# Database Configuration
VECTOR_DB_PATH=./data/chromadb
REDIS_URL=redis://localhost:6379

# Rate Limiting
DAILY_QUERY_LIMIT=20
DAILY_WORD_LIMIT=5000
TOPIC_FOLLOW_UP_LIMIT=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true

# SAHO Integration
SAHO_BASE_URL=https://sahistory.org.za
SAHO_API_URL=https://sahistory-web.ddev.site/api

# Security
SECRET_KEY=your_secret_key_here_change_in_production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,https://sahistory.org.za

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log

# Cache Settings
CACHE_TTL=3600
RESPONSE_CACHE_SIZE=1000

# Performance
MAX_CONCURRENT_QUERIES=10
QUERY_TIMEOUT=30