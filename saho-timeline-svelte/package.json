{
  "name": "saho-timeline-svelte",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "High-performance timeline for South African History Online",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "dev:ddev": "ddev exec -d /var/www/html/saho-timeline-svelte npm run dev",
    "build": "vite build",
    "build:ddev": "npm run build && cp -r dist/* ../webroot/timeline-app/",
    "preview": "vite preview --host 0.0.0.0 --port 4173",
    "start": "node server.js",
    "build:prod": "npm run build && npm run start",
    "docker:build": "docker build -t saho-timeline .",
    "docker:run": "docker run -p 3000:3000 saho-timeline"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.1.1",
    "svelte": "^5.38.1",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@sveltejs/adapter-node": "^5.2.14",
    "axios": "^1.11.0",
    "canvas-confetti": "^1.9.3",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "express": "^4.21.2",
    "http-proxy-middleware": "^3.0.5",
    "svelte-virtual-list": "^3.0.1"
  }
}
